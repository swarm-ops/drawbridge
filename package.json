{
  "name": "drawbridge",
  "version": "0.1.0",
  "description": "Real-time diagram server that lets Claude (or any AI) draw on an Excalidraw canvas via HTTP API",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "render": "npx tsx scripts/render.ts",
    "test": "node test/api.test.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.985.0",
    "@excalidraw/excalidraw": "^0.18.0",
    "express": "^5.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/ws": "^8.5.0",
    "@vitejs/plugin-react": "^4.3.0",
    "playwright": "^1.49.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.0"
  },
  "keywords": [
    "excalidraw",
    "diagram",
    "real-time",
    "websocket",
    "claude",
    "ai",
    "drawing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexknowshtml/drawbridge"
  }
}
